<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>

        <td style="white-space: nowrap; float: left;">
          <%= image_tag(tweet.user.picture, style: 'border-radius: 50%; width: 50px') if tweet.user.picture %>
        </td>
        <td>
          <small><%= tweet.user %> <%= time_ago_in_words(tweet.created_at) %></small>
          <br>
          <big><%= tweet.text %></big>
        </td>
        <!-- <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

